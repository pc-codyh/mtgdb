<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cody.hart.mtg.draft.buddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".SplashScreen" android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainMenu" android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="mtg.draft.buddy.MainMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".NewDraft" android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="mtg.draft.buddy.NewDraft" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadDraft" android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="mtg.draft.buddy.LoadDraft" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CompletedDrafts" android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="mtg.draft.buddy.LoadDraft" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>